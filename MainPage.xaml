<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanejamentoDeViagem.MainPage"
             Title="Bem-vindo(a)!">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <!-- Botão que leva até à tela de cadastro de viagens -->
            <Button Text="Cadastrar Viagem" Clicked="BtnCadastrarViagem_Clicked" BackgroundColor="#D81414" TextColor="White" CornerRadius="15"/>
            <!-- Botão que leva até à tela onde estão as viagens já cadastradas-->
            <Button Text="Minhas Viagens" Clicked="BtnMinhasViagens_Clicked" BackgroundColor="#D81414" TextColor="White" CornerRadius="15"/>
            <!-- Botão de Logout -->
            <Button Text="Logout" Clicked="OnLogoutClicked" BackgroundColor="#D81414" TextColor="White" CornerRadius="15" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>